<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	
	<item android:top="0dp" android:left="0dp" android:right="0dp"
		android:bottom="0dp">
		<bitmap android:tileMode="repeat" android:dither="true"
			android:antialias="true" android:gravity="top|left|clip_vertical|clip_horizontal"
			android:src="@drawable/status_bar_background" />
	</item>
	
	<item android:top="0dp" android:left="0dp" android:right="0dp"
		android:bottom="0dp">

		<shape>
			<gradient android:startColor="#99000000" android:endColor="#77000000"
				android:angle="270" />
			<padding android:left="1dp" android:top="1dp" android:right="1dp"
				android:bottom="1dp" />
			<corners android:radius="0dp" />
			<stroke android:width="0.3dp" android:color="#EE000000" />
		</shape>

	</item>
	
</layer-list>
